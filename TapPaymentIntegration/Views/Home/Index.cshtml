@{
	@if (SignInManager.IsSignedIn(User))
	{
		var subid = user.SubscribeID;
		<section id="pricing" class="pricing-content section-padding">
			<div class="container">
				<div class="section-title text-center">
					<h2>Pricing Plans</h2>
					<p>Committed To People Committed To The Future,We Are Focus On Your Ultimate Goa.</p>
				</div>
				<div class="row text-center">
					@foreach (var item in Model)
					{
						<div class="col-lg-4 col-sm-6 col-xs-12 wow fadeInUp" data-wow-duration="1s" data-wow-delay="0.1s" data-wow-offset="0" style="visibility: visible; animation-duration: 1s; animation-delay: 0.1s; animation-name: fadeInUp;">
							<div class="pricing_design">
								<div class="single-pricing">
									<div class="price-head">
										<h2>@item.Name</h2>
										<h1>@item.Amount</h1>
										<span>/@item.Frequency</span>
									</div>
									<ul>
										<li><b>Currency:</b> @item.Currency</li>
										<li><b>Country:</b>  @item.Countries</li>
										<li><b>SetupFee:</b> @item.SetupFee</li>
									</ul>
									<div class="pricing-price">
									</div>
									@{
										if (item.SubscriptionId == Convert.ToInt32(subid))
										{
											<span class="price_btn">AlReady Purchase</span>
										}
										else
										{
											<a href="@Url.Action("AddGymCustomer","Home", new {id= item.SubscriptionId})" class="price_btn">Purchase Plan</a>
										}
									}
								</div>
							</div>
						</div>
					}
				</div>
			</div>
		</section>
	}
	else
	{
		<section id="pricing" class="pricing-content section-padding">
			<div class="container">
				<div class="section-title text-center">
					<h2>Pricing Plans</h2>
					<p>Committed To People Committed To The Future,We Are Focus On Your Ultimate Goa.</p>
				</div>
				<div class="row text-center">
					@foreach (var item in Model)
					{
						<div class="col-lg-4 col-sm-6 col-xs-12 wow fadeInUp" data-wow-duration="1s" data-wow-delay="0.1s" data-wow-offset="0" style="visibility: visible; animation-duration: 1s; animation-delay: 0.1s; animation-name: fadeInUp;">
							<div class="pricing_design">
								<div class="single-pricing">
									<div class="price-head">
										<h2>@item.Name</h2>
										<h1>@item.Amount</h1>
										<span>/@item.Frequency</span>
									</div>
									<ul>
										<li><b>Currency:</b> @item.Currency</li>
										<li><b>Country:</b>  @item.Countries</li>
										<li><b>SetupFee:</b> @item.SetupFee</li>
									</ul>
									<div class="pricing-price">
									</div>
									<a href="@Url.Action("AddGymCustomer","Home", new {id= item.SubscriptionId})" class="price_btn">Purchase Plan</a>
								</div>
							</div>
						</div>
					}
				</div>
			</div>
		</section>
	}
}
